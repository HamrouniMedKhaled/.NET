
@{
    ViewBag.Title = "ClientSingle";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}






@{
    var p = ViewBag.result;
}

@{string path = "~/Content/Upload/" + @p.image + ".jpg";}


<h2>Profile</h2>


<div class="single-user-candidate">
    <div class="user-detail-info text-center">
        <div class="user-pic">
            <img src="@Url.Content(path)" class="img-fluid rounded-circle" alt="">
        </div>
        <div class="user-content-info emply-resume-info text-center mt-4">
            <h4>
                <a href="#">@p.nom  @p.prenom</a>
            </h4>
            <h3>
                <a href="candidate_single.html">
                    <i class="far fa-envelope"></i>
                    <span class="icon_text"> @p.email</span>
                </a>
            </h3>
            <p>
                <i class="fas fa-map-marker-alt"></i> @p.ville / @p.pays
            </p>
            <ul class="links_bottom_emp mt-2">
                <li>

                    
                </li>
                <li>
                    <h4>
                        <a href="location_single.html">
                            <i class="fas fa-eye"></i>
                            <span class="icon_text">Client Category  :       @p.clientCategory   </span>
                        </a>
                    </h4>
                   
                </li>
            </ul>
            <div class="row qualification-details mt-5">

             
                <div class="col-md-3 qual-grid">
                    <div class="qual-icon text-center">
                        <i class="far fa-file-alt"></i>
                    </div>
                    <div class="qual-info">
                        <h4>Type Client : </h4>
                        <p>>@p.clientType</p>
                    </div>
                    <div class="clearfix"></div>
                </div>

                </div>

      



            </div>
    </div>
</div>

