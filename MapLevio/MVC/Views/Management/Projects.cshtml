
@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}
<script src="~/Scripts/Chart/exporting.js"></script>
<script src="~/Scripts/Chart/highcharts.js"></script>

<h2>Projects</h2>

<h2>Le nombre total de projets est : @ViewBag.all</h2>
<div id="container-projects" style="min-width: 200px; height: 300px; max-width: 400px; margin: 0 auto"></div>

















<script>
Highcharts.chart('container-projects', {
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie',

        },
        credits: { enabled: false },
        title: {
            text: 'Project State Ratio'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'blue'
                    }
                }
            }
        },
        series: [{
            name: 'Projects',
            colorByPoint: true,
            data: [{
                name: 'New',
                y: @ViewBag.nnew
                }, {
                name: 'In Progress',
                y: @ViewBag.nip
                },
            {
                name: 'Finished',
                y: @ViewBag.nfinished
                }]
                }]
    });


</script>