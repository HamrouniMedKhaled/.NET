
@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}
<script src="~/Scripts/Chart/exporting.js"></script>
<script src="~/Scripts/Chart/highcharts.js"></script>
<h2>Clients</h2>

<div id="container-clients" style="min-width: 200px; height: 300px; max-width: 400px; margin: 0 auto"></div>




<script>
Highcharts.chart('container-clients', {
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie',

        },
        credits: { enabled: false },
        title: {
            text: 'Clients Ratio'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'blue'
                    }
                }
            }
        },
        series: [{
            name: 'Client Type',
            colorByPoint: true,
            data: [{
                name: 'Public',
                y: @ViewBag.nprivate
                }, {
                name: 'Private',
                y: @ViewBag.npublic
                ]
                }]
                });


</script>