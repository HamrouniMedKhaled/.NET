@model IEnumerable<Domaine.project>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "ListProject";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>ListProject</h2>
<div id="table">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectType)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.competence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateDebut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nbrResource)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.projectName)
            </th>

            <th></th>
        </tr>

        @foreach (var item in ViewBag.result)
        {
            <tr>
                <td>
                    @item.ProjectType
                </td>

                <td>
                    @item.competence
                </td>
                <td>
                    @item.dateDebut
                </td>
                <td>
                    @item.dateFin
                </td>
                <td>
                    @item.description
                </td>
                <td>
                    @item.nbrResource
                </td>

                <td>
                    @item.projectName
                </td>

                <td>

                    @Html.ActionLink("Details", "Details", new { id = item.projectId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.projectId })
                </td>
            </tr>
        }

    </table>
</div>




@using (Html.BeginForm("Export", "project", FormMethod.Post))
            {
    <input type="hidden" name="tableHtml" />
    <input type="submit" id="btnSubmit" value="Exporter en pdf" />
}
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
        $(function () {
            $("#btnSubmit").click(function () {
                $("input[name='tableHtml']").val($("#table").html());
            });
        });
</script>
