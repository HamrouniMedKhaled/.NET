@model Domaine.passage

@{
    ViewBag.Title = "CreateFr";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>CreateFr</h2>

@using (Html.BeginForm("CreateFr", "Passage", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>passage</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">


            @Html.LabelFor(model => model.dateOfPassing, htmlAttributes: new { @class = "control-label col-md-2", type = "date" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dateOfPassing, new { htmlAttributes = new { @class = "form-control" }, type = "date" })
                @Html.ValidationMessageFor(model => model.dateOfPassing, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


